# Application Environment
NODE_ENV=development
APP_NAME=Patapesa Loan
APP_URL=http://localhost:3000
APP_PORT=3000
LOG_LEVEL=info

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_database_password
DB_NAME=patapesa_loan
DB_SSL=false
DB_POOL_MIN=2
DB_POOL_MAX=10

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_URL=redis://localhost:6379/0

# JWT Authentication
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRATION=7d
JWT_REFRESH_SECRET=your_super_secret_refresh_token_key
JWT_REFRESH_EXPIRATION=30d

# API Configuration
API_VERSION=v1
API_BASE_URL=/api/v1
API_TIMEOUT=30000
API_RATE_LIMIT_WINDOW=15
API_RATE_LIMIT_MAX_REQUESTS=100

# Email Configuration
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=your_email@gmail.com
MAIL_PASSWORD=your_email_password
MAIL_FROM=noreply@patapesa-loan.com
MAIL_FROM_NAME=Patapesa Loan System
MAIL_ENCRYPTION=tls

# Payment Gateway Configuration
PAYMENT_PROVIDER=mpesa
MPESA_API_URL=https://api.sandbox.safaricom.co.ke
MPESA_CONSUMER_KEY=your_mpesa_consumer_key
MPESA_CONSUMER_SECRET=your_mpesa_consumer_secret
MPESA_BUSINESS_CODE=174379
MPESA_PASSKEY=bfb279f9aa9bdbcf158e97dd1a503b00
MPESA_SHORTCODE=600000
MPESA_INITIATOR_NAME=testapi
MPESA_INITIATOR_PASSWORD=your_initiator_password
MPESA_ENVIRONMENT=sandbox

# Stripe Configuration (Alternative)
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# AWS S3 Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=patapesa-loan-bucket
AWS_S3_URL=https://patapesa-loan-bucket.s3.amazonaws.com

# File Upload Configuration
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png

# SMS Configuration
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Security Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
CSRF_PROTECTION=true
HELMET_ENABLED=true
RATE_LIMIT_ENABLED=true

# Logging Configuration
LOG_DIR=logs
LOG_MAX_SIZE=10m
LOG_MAX_FILES=14

# Third-party Services
SENTRY_DSN=
ANALYTICS_ENABLED=false
GOOGLE_ANALYTICS_ID=

# Feature Flags
FEATURE_TWO_FACTOR_AUTH=true
FEATURE_BIOMETRIC_LOGIN=false
FEATURE_LOAN_CALCULATOR=true
FEATURE_AUTOMATED_PAYMENTS=true

# Cache Configuration
CACHE_TTL=3600
CACHE_DRIVER=redis

# Session Configuration
SESSION_SECRET=your_session_secret_key
SESSION_TIMEOUT=1800
REMEMBER_ME_DURATION=2592000

# Notification Configuration
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=true
ENABLE_PUSH_NOTIFICATIONS=false

# Loan Configuration
MIN_LOAN_AMOUNT=1000
MAX_LOAN_AMOUNT=1000000
DEFAULT_INTEREST_RATE=0.18
DEFAULT_LOAN_TERM_MONTHS=12

# Admin Configuration
ADMIN_EMAIL=admin@patapesa-loan.com
ADMIN_PHONE=+254712345678

# Development Configuration
DEBUG_MODE=false
MOCK_PAYMENTS=false
SEED_DATABASE=false
